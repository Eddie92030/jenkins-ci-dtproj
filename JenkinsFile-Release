def buildNumber = Jenkins.instance.getItem("${BuildJobName}").lastSuccessfulBuild.number

pipeline {
  agent {
     node { 
        label 'windows'
        } 
  }
  stages {
    stage('Download Artifact from Nexus') {
      steps {
        echo "${ProjectName}"
        echo "${buildNumber}"
        echo "${BuildJobName}"
        powershell "curl.exe -v -u jenkins-user:A*69@%Y_kBwe75f http://localhost:8081/repository/msbuild-drop/${env.JOB_NAME}/${buildNumber}/${ProjectName}.ispac --output ./${ProjectName}.ispac"

      }
    }

    stage('Deploy Ispac') {
      steps {
        echo "To Deploy Ispac"
        powershell "ssisdeploy -s:./${ProjectName}.ispac -d:catalog;/SSISDB/${SSISFolderName};${DBServerName}"
      }
    }

    stage('Update Configuration'){
      steps {
        echo "To Update Configuration"
      }
    }
    

  }
}